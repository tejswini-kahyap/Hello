<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/white"
    android:gravity="center"
    android:paddingTop="10dp"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@color/backgroundopacity"></LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginStart="40dp"

        android:layout_marginTop="60dp"
        android:layout_marginEnd="40dp"
        android:layout_marginBottom="30dp"
        android:background="@color/cardview_shadow_start_color"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/image"
            android:layout_width="139dp"
            android:layout_height="146dp"
            android:layout_gravity="center"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="10dp"
            android:background="?android:attr/colorLongPressedHighlight"
            android:padding="8dp"
            android:src="@drawable/chef"></ImageView>

        <TextView
            android:id="@+id/cafe"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="214dp"
            android:fontFamily="cursive"
            android:gravity="center"
            android:padding="8dp"
            android:paddingTop="10dp"
            android:text="CafeHouse"
            android:textColor="#000000"
            android:textSize="50sp" />

        <Button
            android:id="@+id/login"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:background="@drawable/btn_gradient"
            android:fontFamily="sans-serif-black"
            android:padding="8dp"
            android:text="login"
            android:textColor="#000000"
            android:textSize="20sp"
            app:backgroundTint="@color/design_default_color_surface" />


        <Button
            android:id="@+id/register"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:background="@drawable/btn_gradient"
            android:fontFamily="sans-serif-black"
            android:padding="8dp"
            android:text="Register"
            android:textColor="#000000"
            android:textSize="20sp"
            app:backgroundTint="@color/design_default_color_surface" />

        <TextView
            android:id="@+id/textView2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="sans-serif-black"
            android:gravity="center"
            android:text="Skip"
            android:textColor="#000000"
            android:textSize="16sp" />

    </LinearLayout>
</RelativeLayout>
